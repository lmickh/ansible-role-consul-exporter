[Unit]
Description=Prometheus consul-exporter in Docker
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStart=/usr/bin/docker start -a {{ consul_exporter_service_name }}
ExecStop=/usr/bin/docker stop -t 15 {{ consul_exporter_service_name }}
Restart={{ consul_exporter_restart }}
RestartSec={{ consul_exporter_restart_sec }}

[Install]
WantedBy=multi-user.target
